<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_surface_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/incident_image_home"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/incident_minute_home"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/on_surface_on_surface_lv_2"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/incident_image_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/vertical_line_home"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/on_surface_on_surface_lv_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/incident_image_home"
        android:layout_marginStart="15dp"
        >
    </View>

    <TextView
        android:id="@+id/incident_player_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_line_home"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/incident_description_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/on_surface_on_surface_lv_2"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/incident_player_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_line_home"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="2dp"
        />

    <ImageView
        android:id="@+id/incident_image_away"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/incident_minute_away"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/on_surface_on_surface_lv_2"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/incident_image_away"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        />

    <View
        android:id="@+id/vertical_line_away"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/on_surface_on_surface_lv_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/incident_image_away"
        android:layout_marginEnd="15dp">
    </View>

    <TextView
        android:id="@+id/incident_player_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_line_away"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/incident_description_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/on_surface_on_surface_lv_2"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/incident_player_away"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_line_away"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="2dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>