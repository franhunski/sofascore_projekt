<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/date_left_3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="3rd Date"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/date_left_2"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/date_left_2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="2nd Date"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_left_3"
        app:layout_constraintEnd_toStartOf="@id/date_left_1"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/date_left_1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="1st Date"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_left_2"
        app:layout_constraintEnd_toStartOf="@id/date_today"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/date_today"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Today"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_left_1"
        app:layout_constraintEnd_toStartOf="@id/date_right_1"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/date_right_1"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="1st Date"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_today"
        app:layout_constraintEnd_toStartOf="@id/date_right_2"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/date_right_2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="1st Date"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_right_1"
        app:layout_constraintEnd_toStartOf="@id/date_right_3"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/date_right_3"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="1st Date"
        android:textColor="@color/surface_surface_1"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/date_right_2"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>